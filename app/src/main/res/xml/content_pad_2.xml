<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="33%p"
    android:horizontalGap="10dp"
    android:verticalGap="10dp"
    android:keyHeight="80dp">

    <Row>
        <Key android:codes="6" android:keyLabel="6" android:keyEdgeFlags="left"/>
        <Key android:codes="7" android:keyLabel="7"/>
        <Key android:codes="8" android:keyLabel="8" android:keyEdgeFlags="right"/>
    </Row>

    <Row>
        <Key
            android:codes="9"
            android:keyLabel="9"
            android:keyEdgeFlags="left" />
        <Key
            android:codes="-1"
            android:keyLabel="BACK"
            android:keyWidth="67%p"
            android:keyEdgeFlags="right"/>
    </Row>

</Keyboard>